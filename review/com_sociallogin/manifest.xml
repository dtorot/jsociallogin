<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="5.2" method="upgrade">
    <name>com_sociallogin</name>
    <version>0.0.1</version>
    <description>OpenSAI Basic Social Login Component</description>
    <administration>
        <menu img="class:default">OpenSAI Social Login</menu>
        <files>
            <file>admin/sociallogin.php</file>
            <file>admin/config.xml</file>
        </files>
    </administration>    
    <files>
        <folder>admin</folder>
        <folder>site</folder>
        <filename>site/sociallogin.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="custom_string" type="text" label="Custom String" description="Enter a custom string parameter." default="Hello, Joomla!" />
                <field name="google_client_id" type="text" label="Google Client ID" description="Enter your Google Client ID" />
                <field name="google_client_secret" type="password" label="Google Client Secret" description="Enter your Google Client Secret" />
                <field name="google_client_redirect_uri" type="text" label="Google Client Redirect URI" description="URL Google redirects back to after login" />                
            </fieldset>
        </fields>
    </config>
</extension>
